        <div class="col-sm-1">
        <%#= f.text_field :running, class: "form-control" %>
        <%= f.check_box  :running,  { class: "checkbox", value: ""} %>
        </div>

        <%= f.label :is_closed, class: "col-sm-1 control-label" %>
