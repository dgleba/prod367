        <%= f.label :priority, "B", :value => "rpriority" %>
        <%= f.radio_button :priority, 'B' , class: "radio-inline" %>  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <%= f.label :priority, "C", :value => "rpriority" %>
