<%= simple_form_for(@dc_discipline) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :date_discipline %>
    <%= f.association :stf_employee %>
    <%= f.input :discipline_by %>
    <%= f.association :dc_level %>
    <%= f.association :dc_stream %>
    <%= f.input :infraction_description %>
    <%= f.input :dc_action %>
    <%= f.input :dc_comment %>
    
    <%= f.input :sort_order %>
    <%= f.input :active_status %>

     

    <style>
    .sigPad {
      margin: 0;
      padding: 0;
      width: 303px; /* Change the width */
    }
    
    .sigWrapper {
      clear: both;
      height: 108px; /* Change the height */
    
      border: 1px solid #ccc;
    }
    </style>
    
    <div class="sigPad">
      <p class="drawItDesc">Draw your signature</p>
      <ul class="sigNav">
        <li class="clearButton">
          <a href="#clear">Clear</a>
        </li>
      </ul>
      <div class="sig sigWrapper">
        <div class="typed"></div>
        <canvas class="pad" width="300" height="105"></canvas><%= f.input :output , as: :hidden , input_html: { class: 'output' } %>
      </div>
    </div>
    
    <div>
      <br>
    </div>
    
  </div>

  
  
  <div class="form-actions">
      <%= f.button :submit, class: 'btn btn-success'%>
  </div>
<% end %>


<script>
var dgoptions = {
  bgColour : '#F0FEEF'
  , drawOnly : true
};

$( document ).ready(function(){
  // if sigpad is not in a cocoon nested form.. 
  // also, without this, it won't show sigpad when edit is pressed. 2016-06-24.  
  $('.sigPad').signaturePad(dgoptions);
 });
</script>

   