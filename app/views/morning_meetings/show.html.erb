


<p>
  <strong>Priority:</strong>
  <%= @morning_meeting.priority %>
</p>

<p>
  <strong>Machine:</strong>
  <%= @morning_meeting.machine_id %>
</p>

<p>
  <strong>Problem description:</strong>
  <%= @morning_meeting.problem_description %>
</p>

<p>
  <strong>Running:</strong>
  <%= @morning_meeting.running %>
</p>

<p>
  <strong>Responsibility:</strong>
  <%= @morning_meeting.responsibility %>
</p>

