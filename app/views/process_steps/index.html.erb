<p id="notice"><%= notice %></p>

<h1>Process Steps</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Sort</th>
      <th>Active status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @process_steps.each do |process_step| %>
      <tr>
        <td><%= process_step.name %></td>
        <td><%= process_step.sort %></td>
        <td><%= process_step.active_status %></td>
        <td><%= link_to 'Show', process_step %></td>
        <td><%= link_to 'Edit', edit_process_step_path(process_step) %></td>
        <td><%= link_to 'Destroy', process_step, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Process Step', new_process_step_path %>
