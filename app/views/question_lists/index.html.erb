
<row class="row is-table-row" >

  <div class="col-sm-1 ">
    <%= link_to 'Create', new_question_list_path , class: "btn btn-success"%>
  </div>

  <div class="col-sm-2 ">
    <h4>Listing Question Lists</h4>
  </div>

  <div class="col-sm-3">
    <%= search_form_for @q, class: 'search-form' do |f| %>
      <div class="input-group">
        <%= f.search_field :name_cont, class: 'form-control' %>
        <span class="input-group-btn">
          <button class="btn btn-primary">Search <i class="fa fa-search"></i>
          </button>
        </span>
      </div>
    <% end %>
  </div>

  <div class="col-sm-4 ">
    <%= paginate @question_lists %>
  </div>
  
  <div class="col-sm-2 ">
    <%= page_entries_info @question_lists, :entry_name => 'item' %>
  </div>
  
</row>


<table class="table table-striped">
  <thead>
    <tr>
      <th colspan="1"></th>
            <th>Name</th>
      <th>Sort</th>
      <th>Active status</th>
    </tr>
  </thead>

  <tbody>
    <% @question_lists.each do |question_list| %>
      <tr>
        <td>
          <div class="btn-group">
          <%= link_to 'Show', question_list, class: "btn btn-info", :style=>'color:#FFFFFF;' %>
          <%= link_to 'Edit', edit_question_list_path(question_list), class: "btn btn-primary", :style=>'color:#FFFFFF;' %>
          <%= link_to 'Destroy', question_list, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning", :style=>'color:#FFFFFF;' %>
          </div>
        </td>
        
        <td><%= question_list.name %></td>
        <td><%= question_list.sort %></td>
        <td><%= question_list.active_status %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
