<%= simple_form_for(@question) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%#= f.input :title_notused %>
    <%= f.association :survey %>
    <%#= commented-out f.input :qtype, collection: Question.qtypes, :selected => Question.qtypes.keys[@question[:qtype].to_i], input_html: { autocomplete: 'off' } %>
    <%= f.input :qtype, collection: Question.qtypes, input_html: { autocomplete: 'off' } %>
    <%= f.input :question_note %>
    <%= f.input :question_whatlookfor %>
    <%= f.input :question_if_no %>
    <%= f.association :question_list, :label_method => lambda { |question_list| "##{question_list.id} -- #{question_list.name}" } %>
    <%= f.input :active_status %>
    <%= f.input :sort %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-success'%>
  </div>
<% end %>
