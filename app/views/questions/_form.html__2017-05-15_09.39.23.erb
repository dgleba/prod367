
<%= form_for(@question, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @question.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@question.errors.count, "error") %> prohibited this question from being saved:</h4>
      <ul>
      <% @question.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">
            <%= f.label :title_notused, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
        <%= f.text_field :title_notused, class: "form-control" %>
      </div>
        </div>
  <div class="form-group">
            <%= f.label :survey_id, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.collection_select :survey_id, Survey.all, :id, :title,  { prompt: true }, { :class => 'dgselect2' }  %>
        </div>
    </div>
  <div class="form-group">
            <%= f.label :qtype, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
        <%= f.number_field :qtype, class: "form-control" %>
      </div>
        </div>
  <div class="form-group">
            <%= f.label :question_note, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
        <%= f.text_area :question_note, class: "form-control" %>
      </div>
        </div>
  <div class="form-group">
            <%= f.label :question_whatlookfor, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
        <%= f.text_area :question_whatlookfor, class: "form-control" %>
      </div>
        </div>
  <div class="form-group">
            <%= f.label :question_if_no, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
        <%= f.text_area :question_if_no, class: "form-control" %>
      </div>
        </div>
  <div class="form-group">
            <%= f.label :question_list_id, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.collection_select :question_list_id, QuestionList.all, :id, :name,  { prompt: true }, { :class => 'dgselect2' }  %>
        </div>
    </div>
  <div class="form-group">
            <%= f.label :active_status, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
        <%= f.number_field :active_status, class: "form-control" %>
      </div>
        </div>
  <div class="form-group">
            <%= f.label :sort, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
        <%= f.number_field :sort, class: "form-control" %>
      </div>
        </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
